{
  "editor.fontSize": 15,
  "editor.tabSize": 4,
  "editor.lineNumbers": "on",
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.renderWhitespace": "boundary",
  "editor.cursorStyle": "line",
  "editor.stickyScroll.enabled": true,
  "editor.snippetSuggestions": "top",
  "editor.wordWrap": "on",
  "editor.parameterHints.enabled": true, // パラメータヒントを無効にする
  "explorer.compactFolders": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "GitHub Dark Default",
  "workbench.panel.defaultLocation": "right",
  "workbench.reduceMotion": "on",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.statusBar.visible": true,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "fit",
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.rightClickBehavior": "paste",
  "extensions.ignoreRecommendations": false,
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  // Notebook settings
  "notebook.output.scrolling": true, // ノートブックの出力をスクロール可能にする
  "notebook.insertFinalNewline": false, // ノートブックの最後に改行を挿入する
  "jupyter.askForKernelRestart": false, // Jupyterカーネルの再起動確認を無効にする
  "notebook.formatOnSave.enabled": true, // ノートブックの保存時に自動フォーマットする
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": true, // ノートブックのソースコードを保存時に自動修正する
    "notebook.source.organizeImports": true // ノートブックのソースコードを保存時に自動インポートを整理する
  },
  // Files settings
  "files.insertFinalNewline": true, // ファイルの最後に改行を挿入する
  "files.autoSave": "afterDelay", // ファイルを遅延後に自動保存する
  "files.trimFinalNewlines": true, // ファイルの末尾の改行をトリミングする
  "files.trimTrailingWhitespace": true, // ファイルの末尾の空白をトリミングする
  "files.exclude": {
    "src/__pycache__": true, // src/__pycache__を除外
    ".mypy_cache": true, // .mypy_cacheを除外
    ".pytest_cache": true, // .pytest_cacheを除外
    ".ruff_cache": true, // .ruff_cacheを除外
    ".venv": true, // .venvを除外
  },
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "files.associations": {
    "vector": "cpp"
  },
}
