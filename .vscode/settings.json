  "terminal.integrated.defaultProfile.linux": "zsh",
  "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0, AccessModifierOffset: -4, UseTab: Never}",
}
